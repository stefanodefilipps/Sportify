!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title profilo
    %link{:crossorigin => "anonymous", :href => "https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css", :integrity => "sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB", :rel => "stylesheet"}/
    = stylesheet_link_tag "index_team.css"
    = stylesheet_link_tag "play.css"
    = stylesheet_link_tag "mostraeventi.css"
    %link{:crossorigin => "anonymous", :href =>"https://use.fontawesome.com/releases/v5.0.13/css/all.css", :integrity =>"sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp", :rel => "stylesheet"}/ 
    %link{:crossorigin => "anonymous", :href => "https://use.fontawesome.com/releases/v5.0.13/css/all.css", :integrity => "sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp", :rel => "stylesheet"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Merriweather+Sans", :rel => "stylesheet"}/
  %body{:style => "font-family: 'Merriweather Sans', sans-serif; margin-left: 0.9%; margin-right: 0.9%;"}
    .row
      %nav.navbar.navbar-light.barra
        .col-3
          .container
            = form_tag "/matches/near", method: :get, :class => "form-inline" do
              %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :style => "width: 48%;", :type => "search", :name => "address"}/
              %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search
        .col-3
          %a{:href => "/users/#{@user.id}"}
            %b Profile
            - if @user.unread_notifications.size > 0
              %span.badge.badge-light 
                = @user.unread_notifications.size
        .col-3
          %a{:href => "/users/#{@user.id}/matches/mode/new"}
            %b Play
        .col-3
          %a{:href => "/users/#{@user.id}/matches"}
            %b Home
    .container
      %br/
      %br/
      %br/
      .row
        .col
          %br/
          %br/
          %br/
          %br/
          = image_tag("#{@user2.img}",height: '130', width: '130', align: "center", id: "image", class: "user_column_obj")
          %br/
        .col
          %br/
          %br/
          %br/
          %br/
          %br/
          %p{:style => "font-size: 30px"}
            %b
              = @user2.nick
        .col
          %br/
          %br/
          %br/
          %br/
          = text_area_tag "desc",nil, class: "form-control", value: "#{@user2.desc}", :rows =>"3",  disabled:true, autofocus: true
      %br/
      %br/
      %br/   
      %hr{:width => "100%"}/
      %br/
      %br/
      %br/
      .row
        .col
          %br/
          %b{:style => "font-size: 25px"} Ruoli preferiti
          %br/
          = form_tag "/users/#{@user.id}/updateR", method: "post" do
            .form-check.form-check-inline
              -if(@user2.ruolo1=="P" || @user2.ruolo2=="P")
                = check_box_tag "P",nil,true, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "P", nil, class: "form-check-label", autofocus:true
              -else
                = check_box_tag "P",nil,false, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "P", nil, class: "form-check-label", autofocus:true
            %br/
            .form-check.form-check-inline
              -if(@user2.ruolo1=="D" || @user2.ruolo2=="D")
                = check_box_tag "D", nil,true, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "D", nil, class: "form-check-label", autofocus:true
              -else
                = check_box_tag "D", nil,false, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "D", nil, class: "form-check-label", autofocus:true
            %br/
            .form-check.form-check-inline
              -if(@user2.ruolo1=="C1" || @user2.ruolo2=="C1")
                = check_box_tag "D", nil,true, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "C1", nil, class: "form-check-label", autofocus:true
              -else
                = check_box_tag "C1", nil,false, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "C1", nil, class: "form-check-label", autofocus:true
            %br/
            .form-check.form-check-inline
              -if(@user2.ruolo1=="C2" || @user2.ruolo2=="C2")
                = check_box_tag "C2", nil,true, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "C2", nil, class: "form-check-label", autofocus:true
              -else
                = check_box_tag "C2", nil,false, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "C2", nil, class: "form-check-label", autofocus:true
            %br/
            .form-check.form-check-inline
              -if(@user2.ruolo1=="A" || @user2.ruolo2=="A")
                = check_box_tag "A", nil,true, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "A", nil, class: "form-check-label", autofocus:true
              -else
                = check_box_tag "A", nil,false, class: "form-check-input", disabled:true, autofocus:true
                = label_tag "A", nil, class: "form-check-label", autofocus:true
        .col
          %br/
          %br/
          %br/
          %br/
          %i.far.fa-star.fa-5x
          %b{:style => "font-size: 40px"}
            Recensioni
            %input#feedback{:disabled => "disabled", :style => "width:80px", :type => "text", :value => "#{@rate.round(1)}"}/
          %br/


	