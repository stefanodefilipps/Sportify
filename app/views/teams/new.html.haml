!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title creasquadra
    %link{:crossorigin => "anonymous", :href => "https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css", :integrity => "sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB", :rel => "stylesheet"}/
    = stylesheet_link_tag "mostraeventi.css"
    = stylesheet_link_tag "index_team.css"
    = stylesheet_link_tag "creasquadra.css"
    %link{:crossorigin => "anonymous", :href => "https://use.fontawesome.com/releases/v5.0.13/css/all.css", :integrity => "sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp", :rel => "stylesheet"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Merriweather+Sans", :rel => "stylesheet"}/
  %body{:style => "font-family: 'Merriweather Sans', sans-serif; margin-left: 0.9%; margin-right: 0.9%;"}
    .row
      %nav.navbar.navbar-light.barra
        .col-3
          .container
            = form_tag "/matches/near", method: :get, :class => "form-inline" do
              %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :style => "width: 48%;", :type => "search", :name => "address"}/
              %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search
        .col-3
          %a{:href => "#"}
            %b Profile
        .col-3
          %a{:href => "#"}
            %b Play
        .col-3
          %a{:href => "#"}
            %b Home
    .row
      .col-2.border-right{:style => "margin-left: 1.4%"}
        .container.user_column
          = image_tag("#{@user.img}",height: '130', width: '130', align: "center", id: "image", class: "user_column_obj")
        .container.user_column
          %p.user_column_obj
            %b#nick Nickname:
            = @user.nick
        .container.user_column
          %p.user_column_obj
            %b#val Valutazione:
            - if @user.voto != nil
              @user.voto
        .container.user_column
          %a.user_column_obj{:href => "#"}
            %b Teams
        .container.user_column
          %a.user_column_obj{:href => "#"}
            %b Logout
    #center
      %p
        %b Crea Squadra
        
    #formteam
      = form_tag "/users/#{@user.id}/teams", method: "post" do
        .form-group
          = text_field_tag "P",nil, class: "form-control", placeholder: "Nickname portiere", autofocus: true
        .form-group
          = text_field_tag "D",nil, class: "form-control", placeholder: "Nickname difensore", autofocus: true
        .form-group
          = text_field_tag "C1",nil, class: "form-control", placeholder: "Nickname centrocampista 1", autofocus: true
        .form-group
          = text_field_tag "C2",nil, class: "form-control", placeholder: "Nickname centrocampista 2", autofocus: true
        .form-group
          = text_field_tag "A",nil, class: "form-control", placeholder: "Nickname attaccante", autofocus: true
        #nameteam
        .form-group
          = text_field_tag "nome",nil, class: "form-control", placeholder: "Nome della squadra", autofocus: true
        #savebutt
        .form-group
          = submit_tag "Crea Squadra", class: "btn btn-primary mb-2"


